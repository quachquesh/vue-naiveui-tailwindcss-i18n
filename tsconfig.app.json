{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "types/**/*.d.ts",
    "src/types/**/*.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@api/*": [
        "./src/services/api/*"
      ],
      "@locales/*": [
        "./locales/*"
      ]
    }
  }
}